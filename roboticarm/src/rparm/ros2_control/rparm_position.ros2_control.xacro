<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:macro name="rparm_system" params="name prefix port_name:=^|/dev/ttyUSB0 use_sim:=^|true use_fake_hardware:=^|false fake_sensor_commands:=^|false hardware_plugin:=^|dynamixel_hardware_interface/DynamixelHardware">
    <ros2_control name="${name}" type="system">
      <xacro:if value="$(arg use_sim)">
        <hardware>
          <plugin>gz_ros2_control/GazeboSimSystem</plugin>
        </hardware>
      </xacro:if>
      <xacro:unless value="$(arg use_sim)">
        <hardware>
          <plugin>${hardware_plugin}</plugin>
          <param name="port_name">${port_name}</param>
          <param name="baud_rate">1000000</param>
          <param name="error_timeout_ms">500</param>
          <param name="number_of_joints">6</param>
          <param name="number_of_transmissions">6</param>
          <param name="disable_torque_at_init">true</param>
          <param name="use_revolute_to_prismatic_gripper">1</param>
          <!-- Map hardware gripper revolute (servo6) to URDF prismatic joint6. -->
          <!-- Closed (neutral) ~333 deg = 5.81 rad; open target ~200 deg = 3.49 rad. -->
          <param name="revolute_to_prismatic_joint">${prefix}joint6</param>
          <param name="revolute_max">5.81</param>   <!-- closed/neutral -->
          <param name="revolute_min">3.49</param>   <!-- open target -->
          <param name="prismatic_max">0.019</param> <!-- open -->
          <param name="prismatic_min">0.0</param>   <!-- closed/neutral -->
        </hardware>
      </xacro:unless>

      <joint name="${prefix}joint1">
        <command_interface name="position"/>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
        <state_interface name="effort"/>
      </joint>
      <joint name="${prefix}joint2">
        <command_interface name="position"/>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
        <state_interface name="effort"/>
      </joint>
      <joint name="${prefix}joint3">
        <command_interface name="position"/>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
        <state_interface name="effort"/>
      </joint>
      <joint name="${prefix}joint4">
        <command_interface name="position"/>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
        <state_interface name="effort"/>
      </joint>
      <joint name="${prefix}joint5">
        <command_interface name="position"/>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
        <state_interface name="effort"/>
      </joint>
      <joint name="${prefix}joint6">
        <command_interface name="position"/>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
        <state_interface name="effort"/>
      </joint>
      <!-- Sim-only: expose right gripper finger to controller. -->
      <xacro:if value="$(arg use_sim)">
        <joint name="${prefix}gripper_right_joint">
          <command_interface name="position"/>
          <state_interface name="position"/>
          <state_interface name="velocity"/>
          <state_interface name="effort"/>
        </joint>
      </xacro:if>

    </ros2_control>
  </xacro:macro>
</robot>
